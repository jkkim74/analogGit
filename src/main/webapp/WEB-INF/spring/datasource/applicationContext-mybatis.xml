<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <beans>
        <bean id="ocbDataSource"
              class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
            <property name="driverClassName" value="#{common['jdbc.ocb.oracle.driverClass']}"/>
            <property name="url" value="#{common['jdbc.ocb.oracle.url']}"/>
            <property name="username" value="#{common['jdbc.ocb.oracle.username']}"/>
            <property name="password" value="#{common['jdbc.ocb.oracle.password']}"/>
            <property name="initialSize" value="#{common['jdbc.ocb.oracle.initialSize']}"/>
            <property name="maxActive" value="50"/>
            <property name="maxIdle" value="15" />
            <property name="minIdle" value="#{common['jdbc.ocb.oracle.initialSize']}" />
            <property name="testOnBorrow" value="false" />
            <property name="validationQuery" value="select 1 from dual" />
            <property name="timeBetweenEvictionRunsMillis" value="10000" />
            <property name="testWhileIdle" value="true" />
            <property name="numTestsPerEvictionRun" value="3" />
            <property name="minEvictableIdleTimeMillis" value="-1" />
        </bean>

        <bean id="ocbSqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
            <property name="dataSource" ref="ocbDataSource" />
            <property name="configLocation" value="classpath:config/ocb/mybatis-config.xml" />
            <property name="mapperLocations" value="classpath*:sql/ocb/mybatis/mapper/**/*.xml" />
        </bean>

        <bean id="ocbSqlSession" class="org.mybatis.spring.SqlSessionTemplate" destroy-method="clearCache">
            <constructor-arg index="0" ref="ocbSqlSessionFactory" />
        </bean>

